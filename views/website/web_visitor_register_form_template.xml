<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="visitor_registration_form_template" name="Contact Form">
      <t t-name="website.visitor-register">
        <t t-call="website.layout">
          <div id="wrap" class="oe_structure oe_empty">
<!--            <section class="s_website_form o_colored_level" style="background-image: none">-->
              <div class="o_container_small">

            <form action="/submit/form" method="post" enctype="multipart/form-data" class="o_mark_required">
<!--                <form data-force_action="/submit/form" action="" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-pre-fill="true" data-model_name="mail.mail" data-success-mode="redirect" data-success-page="/contactus-thank-you">-->
                  <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>


                  <div class="s_website_form_rows row s_col_no_bgcolor">
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="char">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oixrz8qm0rms"><span class="s_website_form_label_content">Full Name</span><span class="s_website_form_mark"> *</span></label>
                        <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="name" required="" placeholder="" id="oixrz8qm0rms" data-fill-with="undefined"/></div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required" data-type="email">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o1f35raqd3k6h"><span class="s_website_form_label_content">Email</span><span class="s_website_form_mark"> *</span></label>
                        <div class="col-sm"><input class="form-control s_website_form_input" type="email" name="email" required="1" placeholder="" id="o1f35raqd3k6h"/></div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="tel">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o8q6uwx9yaq"><span class="s_website_form_label_content">Phone</span></label>
                        <div class="col-sm"><input class="form-control s_website_form_input" type="tel" name="phone" placeholder="" id="o8q6uwx9yaq" data-fill-with="undefined"/></div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="datetime">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o7uairttn55q"><span class="s_website_form_label_content">Visiting Date</span></label>
                        <div class="col-sm">
                          <div class="s_website_form_datetime input-group date">
                            <input type="datetime-local" class="form-control datetimepicker-input s_website_form_input" name="visitingDate" placeholder="" id="o7uairttn55q" data-fill-with="undefined"/>
<!--                            <div class="input-group-text pe-none"><i class="fa fa-calendar"/></div>-->
                          </div>
                        </div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o8s88rucswn4"><span class="s_website_form_label_content">KTP Number</span></label>
                        <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="KTP_number" placeholder="" id="o8s88rucswn4" data-fill-with="undefined"/></div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oudemi8uwdg"><span class="s_website_form_label_content">Company Name</span></label>
                        <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="company_name" id="oudemi8uwdg"/></div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="ow6rq5nsja1m"><span class="s_website_form_label_content">Visit Purpose</span></label>
                        <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="visit_purpose" placeholder="" id="ow6rq5nsja1m" data-fill-with="undefined"/></div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="char">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o5a3day92oe9"><span class="s_website_form_label_content">Intended Person</span></label>
                        <div class="col-sm"><input class="form-control s_website_form_input" type="text" name="intended_person" placeholder="" id="o5a3day92oe9" data-fill-with="undefined"/></div>
                      </div>
                    </div>
                    <div data-name="Field" class="s_website_form_field mb-3 col-12 col-lg-8 s_website_form_custom" data-type="binary">
                      <div class="row s_col_no_resize s_col_no_bgcolor">
                        <label class="col-sm-auto s_website_form_label" style="width: 200px" for="oj2tx4t3luz"><span class="s_website_form_label_content">Your Photo</span></label>
                        <div class="col-sm"><input type="file" class="form-control s_website_form_input" name="photo" accept="image/*" id="oj2tx4t3luz" data-max-files-number="1" data-max-file-size="1" data-show-upload="true" data-fill-with="undefined"/></div>
                      </div>
                    </div>
                    <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                      <div style="width: 200px" class="s_website_form_label"/>
                      <!--<a href="#" role="button" class="btn btn-primary s_website_form_send o_default_snippet_text">Submit</a>-->
                      <button type="submit" class="btn btn-primary s_website_form_send o_default_snippet_text">Submit</button>
                      <span id="s_website_form_result"/>
                    </div>
                  </div>
                </form>
              </div>
<!--            </section>-->
          </div>
        </t>
      </t>
    </template>
</odoo>
